<h1>Download#index</h1>
<p>Find me in app/views/download/index.html.erb</p>
<% @videos.each do |video| %>
	<div class="container">
		<div class="row">
			<h2><%= video.title %></h2>
			<!-- Embed video holder -->
			<div class="col-sm-4 vid-container">
		  	</div>
		  	<!-- Video title and description holder -->
		  	<div class="col-sm-6">			  		
		  		<p><%= video.description %></p>
		  	</div>
		  	<div class="col-sm-2">
		  		<%= check_box_tag("video_ids[]", video.vid_id) %>
		  	</div>
		</div>
	</div>
<% end %>
